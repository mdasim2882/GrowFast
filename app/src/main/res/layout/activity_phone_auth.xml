<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.PhoneAuthActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_name_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:scaleType="fitCenter"
            android:src="@drawable/logo_digitaladvisor"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ll_mobno"
                style="@style/Widget.GrowFast.TextInputLayout."
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_200"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactno"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mclaren"
                    android:hint="Mobile no."
                    android:inputType="phone"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_200" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ll_otpno"
                style="@style/Widget.GrowFast.TextInputLayout."
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_200"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otpnum"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mclaren"
                    android:hint="OTP"
                    android:inputType="numberPassword"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_200" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/verifybutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/red"
                android:onClick="verifyUsingButton"
                android:text="Send OTP"
                app:cornerRadius="18dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkOtp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="authenticateOTP"
                android:text="Validate OTP"
                app:cornerRadius="18dp"

                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>